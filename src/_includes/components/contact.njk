<section id="" class="text-white">
	<div class="bg-black pb-40 pt-20 xl:pb-48 xl:pt-32 px-4 md:px-8 lg:px-16 ">
		<div class="mx-auto max-w-6xl">
			<div class="grid grid-cols-1 items-center gap-14 md:grid-cols-1 lg:grid-cols-2">
				<div class="order-1">
					<div class="mb-6 md:max-w-max">
						<h2 class="text-white">
							Get in Touch
						</h2>
					</div>
					<div class="text-left  leading-tight text-white lg:text-[21px]">
						<p class="">
							Have questions or ready to start your project? Fill out the form and one of our experts will get back to
							you shortly.
						</p>
						<P class="mt-6 text-3xl">Or <span
								class="underline underline-offset-3 decoration-8 decoration-blue dark:decoration-blue">contact us</span>
							directly</P>
					</div>

					<ul class="flex flex-col gap-6 text-2xl mt-3 lg:gap-y-3 xl:mt-6">
						<li class="flex flex-col gap-x-2 leading-tight text-white lg:flex-row lg:leading-normal">
							Email:
							<a href="mailto:contact@kaiseki.co" class="text-white hover:text-orange"><span
									class="px-2 text-white bg-blue rounded dark:bg-blue hover:text-orange hover:bg-white">contact@kaiseki.co</span></a>
						</li>
						<li class="flex flex-col gap-x-2 leading-tight text-white lg:flex-row lg:leading-normal">
							Phone:
							<a href="tel:+33688461986" class="text-white hover:text-orange"><span
									class="px-2 text-white bg-blue rounded dark:bg-blue hover:text-orange hover:bg-white">+33 6 88 46 19
									86</span></a>
						</li>
					</ul>
				</div>

				<div class="overflow-hidden rounded-3xl order-2 shadow-lg">
					<div class="block rounded-lg bg-white px-8 py-12">
						<form id="contact" action="" method="post" class="flex flex-col gap-y-5">
							<div class="grid grid-cols-1 gap-6 xl:grid-cols-2">
								<div class="flex flex-col gap-y-2">
									<label for="contactName" class=" font-semibold leading-relaxed text-black">Enter your
										name</label>
									<input type="text" name="contactName" id="contactName" placeholder="Namus Mac Nomus"
										class="rounded-xl border border-black bg-white px-6 py-4 font-semibold text-black outline-none transition-all duration-300 ease-linear placeholder:text-slate-500 focus:border-blue"
										required>
								</div>
								<div class="flex flex-col gap-y-2">
									<label for="contactEmail" class=" font-semibold leading-relaxed text-black">Email
										address</label>
									<input type="email" name="contactEmail" id="contactEmail" placeholder="namus@acme.com"
										class="rounded-xl border border-black bg-white px-6 py-4 font-semibold text-black outline-none transition-all duration-300 ease-linear placeholder:text-slate-500 focus:border-blue"
										required>
								</div>
							</div>
							<div class="grid grid-cols-1 gap-6 xl:grid-cols-2">
								<div class="flex flex-col gap-y-2">
									<label for="contactPhone" class=" font-semibold leading-relaxed text-black">Phone
										number</label>
									<input type="tel" name="contactPhone" id="contactPhone" placeholder="+1XXXXXX"
										class="rounded-xl border border-black bg-white px-6 py-4 font-semibold text-black outline-none transition-all duration-300 ease-linear placeholder:text-slate-500 focus:border-blue"
										required>
								</div>
								<div class="flex flex-col gap-y-2">
									<label for="contactCompany" class=" font-semibold leading-relaxed text-black">Company</label>
									<input type="text" name="contactCompany" id="contactCompany" placeholder="Acme"
										class="rounded-xl border border-black bg-white px-6 py-4 font-semibold text-black outline-none transition-all duration-300 ease-linear placeholder:text-slate-500 focus:border-blue"
										required>
								</div>
							</div>

							<div class="grid grid-cols-1 gap-6 xl:grid-cols-1">
								<div class="flex flex-col gap-y-2">
									<label for="contactType" class=" font-semibold leading-relaxed text-black">Your needs</label>
									<select name="contactType" id="contactType"
										class="rounded-xl border border-black bg-white px-6 py-4 font-semibold text-black outline-none transition-all duration-300 ease-linear placeholder:text-slate-500 focus:border-blue"
										required>
										<option selected>What are your needs</option>
										<option value="Consulting">Consulting</option>
										<option value="Design">Development</option>
										<option value="Design">Design</option>
										<option value="Automation">Automation</option>
									</select>
								</div>
							</div>

							<div class="grid grid-cols-1 gap-6">
								<div class="flex flex-col gap-y-2">
									<label for="contactMessage" class=" font-semibold leading-relaxed text-black">Message</label>
									<textarea name="contactMessage" id="contactMessage"
										class="min-h-[180px] rounded-xl border border-black bg-white px-6 py-4 font-semibold text-black outline-none transition-all duration-300 ease-linear placeholder:text-slate-500 focus:border-blue"
										placeholder="Write your message here..." required></textarea>
								</div>
							</div>

							<div>
								<button type="submit"
									class="py-4 px-8 font-semibold rounded-full border-2 transition-all duration-300 ease-linear border-blue bg-blue text-white after:bg-orange hover:border-orange hover:text-white hover:bg-orange">
									Send your message
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>